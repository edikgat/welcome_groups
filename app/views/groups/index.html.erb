<table class='table table-success table-striped'>
  <thead>
    <tr>
      <th>Group Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group.name, group_path(group) %>
        </td>
        <td>
          <span class='float-end'>
            <% if policy(group).update? %>
              <%= link_to 'Edit', edit_group_path(group), class: 'btn btn-warning' %>
            <% end %>
            <% if policy(group).destroy? %>
              <%= link_to 'Destroy', group_path(group), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
